---
permalink: /douban/index.html
---
{% layout "layouts/base" %}


{% block head %}{% include 'partials/head',title:post.title %}{% endblock %}

{% block header %}{% include 'partials/header',title:post.title %}{% endblock %}


{% block content %}

<article class="markdown book-article">
  <h2 class="book-title">
    我关注的博主们
  </h2>

  {% for doc in collections.docs-all %}
  {% if doc.slug == 'douban' %}
  {% assign page = doc %}
  {% break %}
  {% endif %}
  {% endfor %}


  {% include "partials/post-meta",img:true,post:page %}

  {{ page.html }}

  <div class="db--container">

    <nav class="db--nav">
      <div class="db--navItem JiEun current" data-type="movie">Movie</div>
      <div class="db--navItem JiEun" data-type="book">Book</div>
      <div class="db--navItem JiEun" data-type="game">Game</div>
      <div class="db--navItem JiEun" data-type="music">Music</div>
      <div class="db--navItem JiEun" data-type="drama">Drama</div>
    </nav>

    <div class="db--genres">
    </div>
    {% assign groupdata = collections.douban.data | doubanGroupbydate %}

    <div class="db--list db--list__card">
      {% for post in groupdata %}
      {% for month in post.data %}
      <div class="db--listBydate">

        <div class="db--titleDate ">
          <div class="db--titleDate__day">{{ month.month }}</div>
          <div class="db--titleDate__month">{{post.year}}</div>
        </div>

        <div class="db--dateList__card">
          {% if month.data %}
          {% for monthdata in month.data %}
          <div class="db--item"><img loading="lazy" src="{{ monthdata.item.cover_image_url }}"
              referrerpolicy="no-referrer" class="db--image">
            <div class="db--score "><svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M12 20.1l5.82 3.682c1.066.675 2.37-.322 2.09-1.584l-1.543-6.926 5.146-4.667c.94-.85.435-2.465-.799-2.567l-6.773-.602L13.29.89a1.38 1.38 0 0 0-2.581 0l-2.65 6.53-6.774.602C.052 8.126-.453 9.74.486 10.59l5.147 4.666-1.542 6.926c-.28 1.262 1.023 2.26 2.09 1.585L12 20.099z">
                </path>
              </svg>{{ monthdata.rating_grade }} · {{ monthdata.item.rating}}</div>
            <div class="db--title ellipsis"><a href="https://movie.douban.com/subject/1401761/" target="_blank" title="{{ monthdata.item.title }}">{{ monthdata.item.title }}</a></div>
          </div>
          {% endfor %}
          {% endif %}
        </div>

      </div>
      {% endfor %}
      {% endfor %}
    </div>



    <div class="block-more block-more__centered">
      <div class="lds-ripple">
      </div>
    </div>

  </div>

  </div>
  {% endblock %}


  {% block footer %}
  {% include 'partials/footer',post:post %}
  {% endblock %}

  {% comment %} {% block comments %}
  {% include 'partials/comment' %}
  {% endblock %} {% endcomment %}



  {% block toc %}
  {% comment %} {% include 'partials/toc-tagloop' %} {% endcomment %}
  {% endblock %}

  {% block h-toc %}
  {% comment %}
  <aside class="hidden clearfix">
    {% include 'partials/toc-tagloop' %}
  </aside>
  {% endcomment %}
  {% endblock %}