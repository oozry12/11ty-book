<h2 class="book-brand" >
  <a class="flex align-center" href="{{ '' | absoluteUrl }}" title="">
    {% if site.icon %}  
    <div class="flex site-logo">
      <img src="{{ site.icon }}" alt="Logo" data-tippy-content="{{ site.title }} | {{ site.description }}" />
      <div class="actives">
        <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-tippy-content="" data-tippy-placement="bottom-start" />
      </div>
    </div>
    {% endif %}
    <div class="flex flex-direction " aria-label="{{ site.title }} | {{ site.description }}" >
      <span class="site-title flex align-center">{{ site.title }}{% svg 'check' %}</span>
      <span class="site-description ellipsis">{{ site.description }}</span>
    </div>
  </a>
</h2>
