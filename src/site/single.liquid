---
pagination:
  data: collections.posts
  size: 1
  alias: post
permalink: /{{ post.slug }}/
---

{% layout "layouts/base" %}

{% block head %}{% include 'partials/head',post:page.title %}{% endblock %}


{% block content %}
  <article class="markdown book-article">
    <h1>
      {{ post.title }}
    </h1>
    {% include  "partials/post-meta",img:true,post:post %}
    {{ post.html  }}
  </article>
{% endblock %}


{% block footer %}
{% include 'partials/footer',post:post %}
{% endblock %}

{% block comments %}
{% include 'partials/comment' %}
{% endblock %}


{% assign has_tag = post.tags | where:'name','#post-toc' | first %}

{% if has_tag %}

{% block toc %}
{% include 'partials/toc',post:post %}
{% endblock %}


{% block h-toc %}
<aside class="hidden clearfix">
{% include 'partials/toc',post:post %}
</aside>
{% endblock %}

{% endif %}
