---
pagination:
  data: collections.docs
  size: 1
  alias: page
permalink: /{{ page.slug }}/
---

{% layout "layouts/base" %}

{% block content %}
  <article class="markdown book-article">
    <h1>
      <a href="{{ page.slug | articleUrl }}">{{ page.title }}</a>
    </h1>
    {{ page.html }}
  </article>
{% endblock %}


{% block footer %}
{% include 'partials/footer' %}
{% endblock %}


{% block toc %}
{% render 'partials/toc',post:page %}
{% endblock %}


{% block h-toc %}
<aside class="hidden clearfix">
{% render 'partials/toc',post:page %}
</aside>
{% endblock %}



{% block pagination %}{% endblock %}

